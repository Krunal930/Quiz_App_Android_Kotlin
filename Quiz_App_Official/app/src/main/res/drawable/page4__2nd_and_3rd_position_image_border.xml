<!-- res/drawable/page4__2nd_and_3rd_position_image_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer layer (border) -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/colorPrimaryDark"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Inner layer (actual circle) -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Inner circle color -->
        </shape>
    </item>

</layer-list>
